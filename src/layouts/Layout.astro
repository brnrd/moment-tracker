---
import '../styles/global.css'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width,initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<meta name="title" content="Moment Tracker" />
		<meta name="description" content="Track meaningful life moments with this minimalist web app. Add events, see time passed, and share your timeline. No signup, no tracking, just local data.">
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="manifest" href="/site.webmanifest">
		<title>Moment Tracker</title>
		<script>
			const theme = localStorage.getItem('theme')
			if (theme) {
				document.documentElement.setAttribute('data-theme', theme)
			}
		</script>
	</head>
	<body>
		<slot />
	</body>
</html>
